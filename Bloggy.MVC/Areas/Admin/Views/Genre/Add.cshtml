@model GenreAddDTO

<div class="container-xxl flex-grow-1 container-p-y">


	<h4 class="py-3 mb-4">
		<span class="text-muted fw-light">Tür Yönetimi /</span> Yazı Türü Ekle
	</h4>

	<div class="row">
		<div class="col-md-12">
			<div class="card mb-4">
				<h5 class="card-header"></h5>
				<form asp-controller="Genre" asp-action="Add" method="post" enctype="multipart/form-data">
					<div asp-validation-summary="ModelOnly"></div>
					<div class="card-body">
	
						<div>
							<label asp-for="Name" id="defaultFormControlInput" class="form-label">Tür</label>
							<input asp-for="Name" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Lütfen Yazı Türü İsmi Giriniz" aria-describedby="defaultFormControlHelp">
							<span asp-validation-for="Name" class="text-danger"></span>
						</div>
					
						<div class="form-group">
						<button type="submit" class="btn btn-primary btn-block">Kaydet</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>

</div>