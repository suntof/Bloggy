@model UserAddDTO

<div class="container-xxl flex-grow-1 container-p-y">


	<h4 class="py-3 mb-4">
		<span class="text-muted fw-light">Kullanıcı Yönetimi /</span> Kullanıcı Ekle
	</h4>

	<div class="row">
		<div class="col-md-12">
			<div class="card mb-4">
				<h5 class="card-header"></h5>
				<form asp-controller="User" asp-action="Add" method="post" enctype="multipart/form-data">
					<div asp-validation-summary="All" style="color:red"></div>
					<div class="card-body">

						<div class="form-group">
							<label asp-for="FirstName" id="defaultFormControlInput" class="form-label">Kullanıcı ismi</label>
							<input asp-for="FirstName" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Lütfen Kullanıcı İsmi Giriniz" aria-describedby="defaultFormControlHelp">
						</div>
						<div class="form-group">
							<label asp-for="LastName" id="defaultFormControlInput" class="form-label">Kullanıcı Soyismi</label>
							<input asp-for="LastName" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Lütfen Kullanıcı Soyismi Giriniz" aria-describedby="defaultFormControlHelp">
						</div>
						<div class="form-group">
							<label asp-for="Email" id="defaultFormControlInput" class="form-label">Kullanıcı E-Posta Adresi</label>
							<input asp-for="Email" type="email" class="form-control mb-3" id="defaultFormControlInput" placeholder="Lütfen Kullanıcı E-Posta Adresi Giriniz" aria-describedby="defaultFormControlHelp">
						</div>
						<div class="form-group">
							<label asp-for="PhoneNumber" id="defaultFormControlInput" class="form-label">Kullanıcı GSM Numarası</label>
							<input asp-for="PhoneNumber" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Lütfen Kullanıcı GSM Numarası Giriniz" aria-describedby="defaultFormControlHelp">
						</div>
						<div class="form-group">
							<label asp-for="RoleId" id="defaultFormControlInput" class="form-label">Kullanıcı Rolü</label>
							<select asp-for="RoleId" class="form-control mb-3" asp-items="@(new SelectList(Model.Roles,"Id","Name"))"></select>
						</div>
						<div class="form-group">
							<label asp-for="Password" id="defaultFormControlInput" class="form-label">Kullanıcı Parolası</label>
							<input asp-for="Password" type="password" class="form-control mb-3" id="defaultFormControlInput" placeholder="&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;" aria-describedby="defaultFormControlHelp">
						</div>
						
					



						<div class="form-group">
							<button type="submit" class="btn btn-primary btn-block">Kaydet</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>

</div>
